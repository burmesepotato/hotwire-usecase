<p id="notice"><%= notice %></p>

<%= turbo_frame_tag dom_id(@applicant) do %>
  <div class="d-flex justify-content-between">
    <h4 class="mb-0">Applicant Profile</h4>

    <div>
      <%# link_to 'Edit Details', edit_applicant_path(@applicant), class: "btn btn-sm btn-primary me-2" %>
      <%= link_to 'View all applicants', applicants_path, class: "btn btn-sm btn-outline-primary", target: "_top" %>
    </div>
  </div>
  <hr>

  <div class="d-flex align-items-center mb-2">
    <h5 class="me-3 my-0">Name:</h5>
    <p class="lead my-0"><%= @applicant.name %></p>
  </div>

  <div class="d-flex align-items-center mb-2">
    <h5 class="me-3 my-0">Position:</h5>
    <p class="lead my-0"><%= @applicant.position %></p>
  </div>

  <%# render "publications/publication" %>
<% end %>

<hr class="mt-5">

<%= turbo_stream_from "publications" %>

<section id="publications">
  <%= turbo_frame_tag "publication_new" do %>
    <div class="text-end">
      <%= link_to "New Publication", new_applicant_publication_path(@applicant), class: "btn btn-sm btn-primary" %>
    </div>
  <% end %>

  <%= turbo_frame_tag "publications" do %>
    <%= render @applicant.publications %>
  <% end %>
</section>