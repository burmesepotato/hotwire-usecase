<%= turbo_frame_tag dom_id(publication)  do %>
    <article class="card">
        <div class="card-body">
            <h5 class="card-title">
                <%= publication.title %>
            </h5>
            <p><%= publication.content %></p>

            <%= link_to 'Edit', publication, class: "btn btn-sm btn-primary me-2" %>
            <%= link_to 'Delete', publication, method: :delete, class: "btn btn-sm btn-outline-primary" %>
        </div>
    </article>
<% end %>